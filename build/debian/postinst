#! /bin/bash
# postinst script for ecmanaged-ecagent
#
# see: dh_installdeb(1)

set -e

. /usr/share/debconf/confmodule 

case "$1" in
    configure)
    if [ -d /etc/collectd ] && [ ! -f /etc/collectd/collectd.conf ]; then
        cat > /etc/collectd/collectd.conf <<EOT
#######################
# EC-AGENT CONFIG START
#######################

LoadPlugin logfile
LoadPlugin rrdtool
LoadPlugin unixsock

LoadPlugin df
LoadPlugin cpu
LoadPlugin disk
LoadPlugin memory
LoadPlugin network
#LoadPlugin tcpconns
LoadPlugin processes
LoadPlugin interface

<Plugin unixsock>  
  SocketFile "/var/run/collectd-unixsock"
  SocketGroup root
  SocketPerms 0700  
</Plugin>  

<Plugin rrdtool>
  DataDir "/var/lib/collectd/rrd"
  CacheFlush 120
  WritesPerSecond 50
</Plugin>

#######################
# EC-AGENT CONFIG END
#######################
EOT

        if [ -x /etc/init.d/collectd ]; then
            /etc/init.d/collectd restart
        fi
    fi
    ;;
    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
